<div class="mx-auto max-w-6xl px-4 py-8">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold">Legal Documents</h1>
    <%= link_to "New Document", fine_print.new_admin_document_path, class: "btn btn-primary" %>
  </div>

  <div class="mb-4 flex gap-2">
    <%= link_to "All", fine_print.admin_documents_path, class: "px-3 py-1 rounded #{params[:scope].blank? ? 'bg-gray-900 text-white' : 'bg-gray-100'}" %>
    <%= link_to "Published", fine_print.admin_documents_path(scope: "published"), class: "px-3 py-1 rounded #{params[:scope] == 'published' ? 'bg-gray-900 text-white' : 'bg-gray-100'}" %>
    <%= link_to "Draft", fine_print.admin_documents_path(scope: "draft"), class: "px-3 py-1 rounded #{params[:scope] == 'draft' ? 'bg-gray-900 text-white' : 'bg-gray-100'}" %>
  </div>

  <table class="min-w-full divide-y divide-gray-200">
    <thead>
      <tr>
        <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Type</th>
        <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Version</th>
        <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Status</th>
        <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Effective</th>
        <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Actions</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% @documents.each do |document| %>
        <tr>
          <td class="px-4 py-2"><%= document.document_type.titleize %></td>
          <td class="px-4 py-2"><%= document.version %></td>
          <td class="px-4 py-2"><%= document.published? ? "Published" : "Draft" %></td>
          <td class="px-4 py-2"><%= document.effective_at&.strftime("%B %d, %Y") || "â€”" %></td>
          <td class="px-4 py-2 flex gap-2">
            <%= link_to "View", fine_print.admin_document_path(document) %>
            <%= link_to "Edit", fine_print.edit_admin_document_path(document) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
